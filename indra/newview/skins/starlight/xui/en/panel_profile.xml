<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 follows="all"
 height="552"
 label="Profile"
 layout="topleft"
 left="0"
 name="panel_profile"
 top="0"
 width="313">
    <string
     name="CaptionTextAcctInfo">
        [ACCTTYPE]
[PAYMENTINFO] [AGEVERIFICATION]
    </string>
    <string
     name="payment_update_link_url">
        http://www.secondlife.com/account/billing.php?lang=en
    </string>
    <string
     name="partner_edit_link_url">
        http://www.secondlife.com/account/partners.php?lang=en
    </string>
    <string
     name="my_account_link_url"
     value="http://secondlife.com/account" />
    <string
     name="no_partner_text"
     value="None" />
    <string
     name="no_group_text"
     value="None" />
    <string
	 name="RegisterDateFormat">
	 [REG_DATE] ([AGE])
	</string>
	  <string
  name="name_text_args">
    [NAME]
  </string>
  <string
    name="display_name_text_args">
    [DISPLAY_NAME]
  </string>
   <accordion
    left="0"
    top="0"
    single_expansion="true"
    fit_parent="true"
    follows="all"
    layout="topleft"
    name="profile_accordion"
    height="523"
    width="313">
     <accordion_tab
      expanded="true"
      layout="topleft"
      name="second_life_tab"
      title="Second Life"
      fit_panel="false">
        <scroll_container
         color="SL-Background_66"
         follows="all"
         layout="topleft"
         left="0"
         name="profile_sl_scroll"
         opaque="true"
         height="523"
         width="313"
         top="0">
          <panel
           layout="topleft"
           follows="left|top|right"
           height="523"
           name="second_life_panel"
           top="0"
           left="0"
           width="313">
              <texture_picker
               allow_no_texture="true"
               default_image_name="None"
               enabled="false"
               fallback_image="Generic_Person_Large"
               follows="top|left"
               height="144"
               layout="topleft"
               left="0"
               name="2nd_life_pic"
               top="10"
               width="154" />
            <text
             follows="left|top"
             font.style="BOLD"
             height="10"
             layout="topleft"
             left_pad="10"
             name="title_member_text"
             text_color="White"
             top_delta="0"
             value="Resident Since:"
             width="120" />
            <text_editor
             allow_scroll="false"
             bg_visible="false"
             follows="left|top"
             h_pad="0"
             height="15"
             layout="topleft"
             name="register_date"
             read_only="true"
             translate="false"
             v_pad="0"
             value="05/31/2376"
             width="120"
             word_wrap="true" />
            <text
             follows="left|top"
             font.style="BOLD"
             height="15"
             layout="topleft"
             name="title_acc_status_text"
             text_color="White"
             top_pad="12"
             value="Account Status:"
             width="120"
             word_wrap="true" />
            <text_editor
             allow_scroll="false"
             bg_visible="false"
             follows="left|top"
             h_pad="0"
             height="42"
             layout="topleft"
             name="acc_status_text"
             read_only="true"
             translate="false"
             top_pad="-2"
             v_pad="0"
             width="120"
             word_wrap="true">
              Resident. No payment info on file.
              Linden.
            </text_editor>
            <text
             follows="left|top"
             font.style="BOLD"
             height="15"
             layout="topleft"
             name="title_partner_text"
             text_color="White"
             top_pad="0"
             value="Partner:"
             width="120" />
            <panel
             follows="left|top"
             height="30"
             layout="topleft"
             name="partner_data_panel"
             top_pad="-2"
             width="120">
              <text
               follows="left|top"
               height="10"
               initial_value="(retrieving)"
               layout="topleft"
               left="0"
               link="true"
               name="partner_text"
               top="0"
               use_ellipses="true"
			   word_wrap="true"
               width="300" />
            </panel>
            <text
             follows="left|top"
             font.style="BOLD"
             height="13"
             layout="topleft"
             left="4"
             name="About_sl_text"
             text_color="White"
             top_pad="-7"
             value="About:"
             width="40" />
              <expandable_text
			   allow_scroll="true"
               follows="left|top|right"
               height="146"
               layout="topleft"
               left="3"
               textbox.max_length="512"
               textbox.show_context_menu="true"
               name="sl_description_edit"
               top_pad="0"
               translate="false"
               width="290"
               expanded_bg_visible="true"
               expanded_bg_color="SL-Background_Light">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean viverra orci et justo sagittis aliquet.Nullamma lesuada mauris sit amet ipsum. adipiscing elit. Ae nean viverra orci et justo sagittis aliquet. Nullam malesuada mauris sit amet ipsum. adipiscing elit. Aenean viverra orci et justo sagittis aliquet. Nullam malesuada mauris sit amet ipsum.
              </expandable_text>
            <text
             follows="left|top"
             font.style="BOLD"
             height="13"
             layout="topleft"
             left="4"
             name="title_groups_text"
             text_color="White"
             top_pad="3"
             value="Groups:"
             width="309" />
			<group_list
			 for_agent="false"
			 allow_select="true"
             height="145"
             follows="all"
			 left="5"
			 right="-20"
			 name="group_list"
             top_pad="0"
			 width="290" />
			<text
             follows="left|top"
             font.style="BOLD"
             height="13"
             layout="topleft"
             left="4"
             name="Key"
             text_color="White"
             top_pad="12"
             value="Resident's Key:"
             width="140" />
			<text_editor
             name="user_key"
             label="Key:"
             left="5"
             top_pad="2"
             right="-86"
             height="20"
             h_pad="0"
             v_pad="4"
             bg_visible="true"
             enabled="false"
             allow_scroll="false"
             initial_value="(loading ...)"
             follows="top|left|right"
             layout="topleft" />
            <button
             name="copy_uri"
             left_pad="4"
             right="-4"
             height="20"
             label="Copy URI"
             enabled="false"
             follows="top|right" />
          </panel>
        </scroll_container>
      </accordion_tab>
    <accordion_tab
     expanded="false"
     layout="topleft"
     name="real_world_tab"
     title="Real World"
     fit_panel="false">
        <scroll_container
         color="SL-Background_66"
         follows="all"
         layout="topleft"
         left="0"
         name="profile_rl_scroll"
         opaque="true"
         height="420"
         width="313"
         top="0">
           <panel
            layout="topleft"
            follows="left|top|right"
            height="420"
            name="profile_rl_scroll_panel"
            top="0"
            left="0"
            width="313">
              <texture_picker
               allow_no_texture="true"
               default_image_name="None"
               enabled="false"
               fallback_image="Generic_Person_Large"
               follows="top|left"
               height="144"
               layout="topleft"
               left="0"
               name="real_world_pic"
               top="10"
               width="154" />
            <text
             follows="left|top"
             font.style="BOLD"
             height="13"
             layout="topleft"
             left="4"
             name="About_rl_text"
             text_color="White"
             top_pad="-15"
             value="About:"
             width="309" />
              <expandable_text
               follows="left|top|right"
               height="220"
               layout="topleft"
               left="3"
               top_pad="-3"
               textbox.max_length="512"
               textbox.show_context_menu="true"
               name="fl_description_edit"
               translate="false"
               width="290"
               expanded_bg_visible="true"
               expanded_bg_color="SL-Background_Light">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean viverra orci et justo sagittis aliquet.Nullamma lesuada mauris sit amet ipsum. adipiscing elit. Ae nean viverra orci et justo sagittis aliquet. Nullam malesuada mauris sit amet ipsum. adipiscing elit. Aenean viverra orci et justo sagittis aliquet. Nullam malesuada mauris sit amet ipsum.
              </expandable_text>
            <text
             follows="left|top"
             font.style="BOLD"
             height="13"
             layout="topleft"
             left="4"
             name="homepage_text"
             text_color="White"
             top_pad="3"
             value="Homepage:"
             width="290" />
              <text
              follows="left|top"
              height="15"
              layout="topleft"
              left="4"
              name="homepage_edit"
              top_pad="2"
              translate="false"
              value="blank"
              width="290"
              word_wrap="false"
              use_ellipses="true" />
          </panel>
        </scroll_container>
      </accordion_tab>
    </accordion>

    <layout_stack
     name="layout_verb_buttons"
     orientation="horizontal"
     follows="bottom|left|right"
     layout="topleft"
     left="2"
     top_pad="1"
     height="30"
     width="309"
     border_size="0">
      <layout_panel
       follows="bottom|left"
       height="30"
       layout="topleft"
       name="profile_buttons_panel"
       top="0"
       auto_resize="false"
       width="309">
           <layout_stack
	     	follows="bottom|left|right"
			height="23"
			layout="topleft"
			name="bottom_bar_ls"
			left="0"
			orientation="horizontal"
			top_pad="5"
			width="309">
	
				<layout_panel
				follows="bottom|left|right"
				height="23"
				layout="bottomleft"
				left="0"
				name="add_friend_btn_lp"
			    user_resize="false" 
			    auto_resize="true"
				width="105">
					<button
			         follows="bottom|left|right"
			         height="23"
			         label="Add Friend"
			         layout="topleft"
			         left="1"
			         mouse_opaque="false"
			         name="add_friend"
			         tool_tip="Offer friendship to the Resident"
			         top="0"
			         width="103" />	
				</layout_panel>
				
				<layout_panel
				follows="bottom|left|right"
				height="23"
				layout="bottomleft"
				left_pad="3"
				name="im_btn_lp"
			    user_resize="false" 
			    auto_resize="true"
				width="32">
					<button
			         follows="bottom|left|right"
			         height="23"
			         label="IM"
			         layout="topleft"
			         name="im"
			         tool_tip="Open instant message session"
			         top="0"
			         left="1"
			         width="30" />		
				</layout_panel>
				
				<layout_panel
				follows="bottom|left|right"
				height="23"
				layout="bottomleft"
				left_pad="3"
				name="call_btn_lp"
			    user_resize="false" 
			    auto_resize="true"
				width="48">
					<button
			         follows="bottom|left|right"
			         height="23"
			         label="Call"
			         layout="topleft"
			         name="call"
			         tool_tip="Call this Resident"
			         left="1"
			         top="0"
			         use_ellipses="true"
			         width="46" />		
				</layout_panel>
				
				<layout_panel
				follows="bottom|left|right"
				height="23"
				layout="bottomleft"
				left_pad="3"
				name="chat_btn_lp"
			    user_resize="false" 
			    auto_resize="true"
				width="88">
					<button
			         follows="bottom|left|right"
			         height="23"
			         label="Teleport"
			         layout="topleft"
			         name="teleport"
			         tool_tip="Offer teleport"
			         left="1"
			         top="0"
			         use_ellipses="true"
			         width="86" />
				</layout_panel>
				
				<layout_panel
				follows="bottom|left|right"
				height="23"
				layout="bottomleft"
				left_pad="3"
				name="overflow_btn_lp"
			    user_resize="false" 
			    auto_resize="false"
				width="24">
                           <menu_button
                            follows="bottom|left|right"
                            height="23"
                            image_overlay="OptionsMenu_Off"
                            layout="topleft"
                            name="overflow_btn"
                            tool_tip="Pay money to or share inventory with the Resident"
                            left="1"
                            top="0"
                            width="23" />
                          </layout_panel>
		</layout_stack>
      </layout_panel>

      <layout_panel
       follows="bottom|left"
       height="30"
       layout="topleft"
       name="profile_me_buttons_panel"
       visible="false"
       width="313">
        <button
         follows="bottom|right"
         height="23"
         left="20"
         top="0"
         label="Edit Profile"
         name="edit_profile_btn"
         tool_tip="Edit your personal information"
         width="130"/>
        </layout_panel>
</layout_stack>
</panel>

